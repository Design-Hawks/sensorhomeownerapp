<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_plowed_driveway_photo_rating"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.example.snowiot.snowiotsimple.PlowedDrivewayPhotoRating">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:id="@+id/drivewayFinishedPhoto" />

    <TextView
        android:text="Uploaded By:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/uploadedBy"
        android:textSize="18sp"
        android:layout_below="@+id/drivewayFinishedPhoto"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/snowPlowRating"
        android:progressTint="@color/tw__composer_red"
        android:stepSize="1"
        android:numStars="5"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Rate Provider:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="12sp"
        android:layout_above="@+id/snowPlowRating"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
